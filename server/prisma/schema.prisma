generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  EMPLOYEE
  MANAGER
  ADMIN
}

enum ExpenseStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  role     Role      @default(EMPLOYEE)
  expenses Expense[]
}

model Expense {
  id              String        @id @default(uuid())
  amount          Float
  date            DateTime      @default(now())
  vendor          String?
  status          ExpenseStatus @default(DRAFT)
  description     String?
  rejectionReason String?
  category        String?
  approvedAt      DateTime?
  approvedBy      String?
  screenshotUrl   String?
  user            User          @relation(fields: [userId], references: [id])
  userId          String
}

